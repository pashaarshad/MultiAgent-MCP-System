# Environment Variables for Multi-Agent MCP System
# Copy this file to .env.local and fill in your values

# ============================================
# LOCAL MODELS (Ollama) - Primary
# ============================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_CODE_MODEL=deepseek-coder:6.7b
OLLAMA_CHAT_MODEL=mistral:7b

# ============================================
# CLOUD MODELS (Fallback)
# ============================================
# OpenRouter API Key (get one at https://openrouter.ai)
OPENROUTER_API_KEY=

# Hugging Face API Key (get one at https://huggingface.co)
HUGGINGFACE_API_KEY=

# ============================================
# IMAGE GENERATION
# ============================================
# Use local Stable Diffusion (requires separate setup)
USE_LOCAL_STABLE_DIFFUSION=false

# Stability AI API Key (optional fallback)
STABILITY_API_KEY=

# ============================================
# AUDIO GENERATION
# ============================================
# Use local Coqui TTS
USE_COQUI_TTS=true

# ElevenLabs API Key (optional fallback)
ELEVENLABS_API_KEY=

# ============================================
# FEATURE FLAGS
# ============================================
# Enable cloud fallback when local models are unavailable
FALLBACK_TO_CLOUD=true

# Save all generations to database
SAVE_GENERATIONS=true

# Enable debug logging
DEBUG_MODE=false
