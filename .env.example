# ============================================
# MULTI-AGENT MCP SYSTEM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# OLLAMA (LOCAL LLM) - FREE, LOCAL
# ============================================
# Download Ollama from: https://ollama.com
# Then run: ollama pull mistral:7b
#           ollama pull deepseek-coder:6.7b

OLLAMA_HOST=http://localhost:11434
OLLAMA_CHAT_MODEL=mistral:7b
OLLAMA_CODE_MODEL=deepseek-coder:6.7b

# ============================================
# OPENROUTER (CLOUD FALLBACK) - OPTIONAL
# ============================================
# Get API key from: https://openrouter.ai
# Used only when Ollama is unavailable

OPENROUTER_API_KEY=
OPENROUTER_CHAT_MODEL=mistralai/mistral-7b-instruct
OPENROUTER_CODE_MODEL=deepseek/deepseek-coder-33b-instruct

# ============================================
# IMAGE GENERATION - OPTIONAL
# ============================================
# Option 1: Local Stable Diffusion (Free)
# Install: https://github.com/AUTOMATIC1111/stable-diffusion-webui
USE_LOCAL_STABLE_DIFFUSION=false
LOCAL_SD_URL=http://localhost:7860

# Option 2: Stability AI (Paid)
# Get API key from: https://platform.stability.ai
STABILITY_API_KEY=

# Option 3: Hugging Face (Free tier available)
# Get API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# ============================================
# VIDEO GENERATION - OPTIONAL
# ============================================
# Replicate API (for AI video generation)
# Get API key from: https://replicate.com
REPLICATE_API_TOKEN=

# Runway ML (alternative)
RUNWAY_API_KEY=

# ============================================
# OUTPUT DIRECTORIES
# ============================================
OUTPUT_DIR=./generated
IMAGE_OUTPUT_DIR=./generated/images
VIDEO_OUTPUT_DIR=./generated/videos
CODE_OUTPUT_DIR=./generated/code

# ============================================
# FEATURE FLAGS
# ============================================
FALLBACK_TO_CLOUD=true
SAVE_GENERATIONS=true
DEBUG_MODE=false

# ============================================
# SERVER PORTS
# ============================================
BACKEND_PORT=8000
NLP_SERVER_PORT=8001
CODE_SERVER_PORT=8002
IMAGE_SERVER_PORT=8003
VIDEO_SERVER_PORT=8004
